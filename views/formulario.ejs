<body>
    <div class="container">
        <h1>Cadastro de Conteúdos</h1>
        <form action="" method="post">
            <label for="estilos">Estilos</label>
            <select name="estilos" id="">
                <option value="0" selected>Selecione...</option>
                <option value="1">Estilo 1</option>
                <option value="2">Estilo 2</option>
                <option value="3">Estilo 3</option>
                <option value="4">Estilo 4</option>
                <option value="5">Estilo 5</option>
                <option value="6">Estilo 6</option>
            </select>
            <label for="imagem">Imagem:</label>
            <input type="file" name="imagem" id="">
            <label for="titulo">Título:</label>
            <input type="text" name="titulo" id="">
            <label for="texto">Texto:</label>
            <textarea style="resize:none;" name="texto" id="" cols="30" rows="10"></textarea>
            <br>
            <input type="submit" value="Gravar">
        </form>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
